generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Profile {
  id        Int    @id @default(autoincrement())
  cv        String
  portfolio String
  email     String
  telephone String
}

model Work {
  id           Int        @id @default(autoincrement())
  year         String
  illustration String
  placement_x  String
  placement_y  String
  url          String?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  photos       Photo[]
  videos       Video[]
  languages    Language[]
}

model Language {
  id             Int      @id @default(autoincrement())
  locale         String
  title          String
  slug           String   @unique
  subtitle       String?
  description    String?
  type           String
  photos_caption String?
  videos_caption String?
  work           Work     @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId         Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Photo {
  id        Int      @id @default(autoincrement())
  url       String
  titre     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  work      Work     @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId    Int
}

model Video {
  id        Int      @id @default(autoincrement())
  url       String
  thumbnail String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  work      Work     @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId    Int
}
