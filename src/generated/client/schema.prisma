generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Work {
  id           Int        @id @default(autoincrement())
  title        String
  subtitle     String?
  description  String?
  illustration String
  type         String     @default("performance")
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  photos       Photo[]
  videos       Video[]
  languages    Language[]
}

model Language {
  id          Int    @id @default(autoincrement())
  locale      String
  title       String
  slug        String
  subtitle    String
  description String
  type        String
  content     String
  work        Work   @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId      Int
}

model Photo {
  id        Int      @id @default(autoincrement())
  url       String
  titre     String
  caption   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  work      Work     @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId    Int
}

model Video {
  id        Int      @id @default(autoincrement())
  url       String
  caption   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  work      Work     @relation(fields: [workId], references: [id], onDelete: Cascade)
  workId    Int
}
